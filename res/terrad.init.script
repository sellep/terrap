#!/bin/bash

case "$1" in 
    start)
        echo "Starting terra daemon"
        /usr/local/bin/terrad /etc/default/terra
        ;;
    stop)
        echo "Stopping terra daemon"
        killall terrad
        ;;
    *)
        echo "Usage: /etc/init.d/terrad start|stop"
        exit 1
        ;;
esac

exit 0
